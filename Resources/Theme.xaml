<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="SidebarBackgroundColor">#111827</Color>
    <Color x:Key="SidebarHoverColor">#1F2937</Color>
    <Color x:Key="PrimaryTealColor">#0E7490</Color>
    <Color x:Key="BackgroundColor">#F8FAFC</Color>
    <Color x:Key="CardBorderColor">#E2E8F0</Color>
    <Color x:Key="InputBorderColor">#CBD5E1</Color>

    <SolidColorBrush x:Key="SidebarBackgroundBrush" Color="{StaticResource SidebarBackgroundColor}"/>
    <SolidColorBrush x:Key="SidebarHoverBrush" Color="{StaticResource SidebarHoverColor}"/>
    <SolidColorBrush x:Key="PrimaryTealBrush" Color="{StaticResource PrimaryTealColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="CardBorderBrush" Color="{StaticResource CardBorderColor}"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="{StaticResource InputBorderColor}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="#DC2626"/>
    <SolidColorBrush x:Key="MutedTextBrush" Color="#64748B"/>
</ResourceDictionary>
