<Window x:Class="KickBlastJudo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KickBlast Judo" Height="900" Width="1450" Background="{StaticResource BackgroundBrush}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="{StaticResource SidebarBackgroundBrush}">
            <TextBlock Text="KickBlast Judo" Foreground="White" FontSize="22" FontWeight="SemiBold" Margin="16,24,16,24"/>
            <Button x:Name="DashboardButton" Click="Navigate_Click" Tag="Dashboard" Style="{StaticResource SidebarButtonStyle}" Background="{StaticResource PrimaryTealBrush}">
                <TextBlock Text="â—»  Dashboard"/>
            </Button>
            <Button x:Name="AthletesButton" Click="Navigate_Click" Tag="Athletes" Style="{StaticResource SidebarButtonStyle}">
                <TextBlock Text="ðŸ‘¤  Athletes"/>
            </Button>
            <Button x:Name="CalculatorButton" Click="Navigate_Click" Tag="Calculator" Style="{StaticResource SidebarButtonStyle}">
                <TextBlock Text="ðŸ§®  Calculator"/>
            </Button>
            <Button x:Name="HistoryButton" Click="Navigate_Click" Tag="History" Style="{StaticResource SidebarButtonStyle}">
                <TextBlock Text="ðŸ•’  History"/>
            </Button>
            <Button x:Name="SettingsButton" Click="Navigate_Click" Tag="Settings" Style="{StaticResource SidebarButtonStyle}">
                <TextBlock Text="âš™  Settings"/>
            </Button>
        </StackPanel>

        <Border Grid.Column="1" Background="#1F2937"/>

        <Grid Grid.Column="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Style="{StaticResource CardBorderStyle}" Margin="0,0,0,12" Padding="16,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="PageTitleText" Text="Dashboard" VerticalAlignment="Center" FontSize="18" FontWeight="SemiBold"/>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="CurrentDateText" Text="Date" Foreground="{StaticResource MutedTextBrush}" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <Button Content="Logout" Width="90" Style="{StaticResource SecondaryButtonStyle}" Height="34"/>
                    </StackPanel>
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid>
                    <Grid x:Name="DashboardView">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <UniformGrid Grid.Row="0" Columns="4" Margin="0,0,0,12">
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,12,12"><StackPanel><TextBlock Text="Total Athletes" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/><TextBlock Text="124" FontSize="22" FontWeight="Bold"/></StackPanel></Border>
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,12,12"><StackPanel><TextBlock Text="Active Plans" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/><TextBlock Text="6" FontSize="22" FontWeight="Bold"/></StackPanel></Border>
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,12,12"><StackPanel><TextBlock Text="Monthly Revenue" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/><TextBlock Text="$11,200" FontSize="22" FontWeight="Bold"/></StackPanel></Border>
                            <Border Style="{StaticResource CardBorderStyle}" Margin="0,0,0,12"><StackPanel><TextBlock Text="Pending Invoices" Foreground="{StaticResource MutedTextBrush}" FontSize="12"/><TextBlock Text="8" FontSize="22" FontWeight="Bold"/></StackPanel></Border>
                        </UniformGrid>
                        <Border Grid.Row="1" Style="{StaticResource CardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Recent Calculations" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <DataGrid Height="280" AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Athlete" Binding="{Binding}" />
                                        <DataGridTextColumn Header="Plan" Binding="{Binding}" />
                                        <DataGridTextColumn Header="Total" Binding="{Binding}" />
                                        <DataGridTextColumn Header="Date" Binding="{Binding}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid x:Name="AthletesView" Visibility="Collapsed">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="12"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="2*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Style="{StaticResource TextInputStyle}" Text="Search athletes..."/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboInputStyle}" Margin="12,0,12,0"><ComboBoxItem Content="All Plans"/></ComboBox>
                            <Button Grid.Column="2" Content="Add Athlete" Style="{StaticResource PrimaryButtonStyle}" Width="110"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="65*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="35*"/></Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                                <DataGrid AutoGenerateColumns="False">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Name" Binding="{Binding}"/>
                                        <DataGridTextColumn Header="Plan" Binding="{Binding}"/>
                                        <DataGridTextColumn Header="Weight" Binding="{Binding}"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding}"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Add / Edit Athlete" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <TextBlock Text="Full Name" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}"/><TextBlock Text="Required" Foreground="#DC2626" FontSize="12" Margin="0,3,0,8"/>
                                    <TextBlock Text="Plan" FontSize="12"/><ComboBox Style="{StaticResource ComboInputStyle}"/><TextBlock Text="Required" Foreground="#DC2626" FontSize="12" Margin="0,3,0,8"/>
                                    <TextBlock Text="Weight (kg)" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}"/><TextBlock Text="" FontSize="12" Margin="0,3,0,8"/>
                                    <Button Content="Save Athlete" Style="{StaticResource PrimaryButtonStyle}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid x:Name="CalculatorView" Visibility="Collapsed">
                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Cost Calculator" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <TextBlock Text="Athlete" FontSize="12"/><ComboBox Style="{StaticResource ComboInputStyle}" Margin="0,0,0,8"/>
                                <TextBlock Text="Training Sessions" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}" Margin="0,0,0,8"/>
                                <TextBlock Text="Coaching Hours" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}" Margin="0,0,0,8"/>
                                <TextBlock Text="Competition Fee" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}" Margin="0,0,0,8"/>
                                <Button Content="Calculate" Style="{StaticResource PrimaryButtonStyle}"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Invoice Preview" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                <TextBlock Text="Training Cost: $320" Margin="0,0,0,6"/>
                                <TextBlock Text="Coaching Cost: $180" Margin="0,0,0,6"/>
                                <TextBlock Text="Competition Cost: $95" Margin="0,0,0,6"/>
                                <TextBlock Text="Total: $595" FontSize="26" FontWeight="Bold" Margin="0,4,0,10"/>
                                <Border Background="#DCFCE7" CornerRadius="10" Padding="8" HorizontalAlignment="Left" Margin="0,0,0,10">
                                    <TextBlock Text="Weight Status: On Track" Foreground="#166534"/>
                                </Border>
                                <TextBlock Text="Second Saturday: 14 Jun 2026" Foreground="{StaticResource MutedTextBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Grid x:Name="HistoryView" Visibility="Collapsed">
                        <Grid.RowDefinitions><RowDefinition Height="Auto"/><RowDefinition Height="12"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0" Style="{StaticResource ComboInputStyle}" Margin="0,0,12,0"/>
                            <ComboBox Grid.Column="1" Style="{StaticResource ComboInputStyle}" Margin="0,0,12,0"/>
                            <ComboBox Grid.Column="2" Style="{StaticResource ComboInputStyle}" Margin="0,0,12,0"/>
                            <Button Grid.Column="3" Content="Clear" Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                        </Grid>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions><ColumnDefinition Width="70*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="30*"/></Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}"><DataGrid/></Border>
                            <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Details" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <TextBlock Text="Select a row to view invoice details." Foreground="{StaticResource MutedTextBrush}" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid x:Name="SettingsView" Visibility="Collapsed">
                        <StackPanel>
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Pricing" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="12"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0"><TextBlock Text="Training / session" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}"/></StackPanel>
                                        <StackPanel Grid.Column="2"><TextBlock Text="Coaching / hour" FontSize="12"/><TextBox Style="{StaticResource TextInputStyle}"/></StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Theme" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <ComboBox Style="{StaticResource ComboInputStyle}">
                                        <ComboBoxItem Content="Light"/>
                                    </ComboBox>
                                </StackPanel>
                            </Border>
                            <Border Style="{StaticResource CardBorderStyle}">
                                <StackPanel>
                                    <TextBlock Text="Database Reset" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                    <Button Content="Reset Database" Style="{StaticResource PrimaryButtonStyle}" Background="{StaticResource DangerBrush}" Width="140" HorizontalAlignment="Left"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>
